<main class="container">
    <form action="/vacancies/new" method="POST" class="default-form">
        <h3>Información General</h3>
        <div class="campo">
            <label>Título</label>
            <input type="text" name="title" placeholder="Ej: React Developer" required>
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="company" placeholder="Empresa Contrata" required>
        </div>
        <div class="campo">
            <label>Título</label>
            <input type="text" name="location" placeholder="Ej: México o Remoto" required>
        </div>
        <div class="campo">
            <label>Salario (USD)</label>
            <input type="text" name="salary" placeholder="Ej: 500 USD" required>
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contract">
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input id="x" type="hidden" name="description">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <input type="hidden" name="skills" id="skills">
        <ul class="lista-conocimientos">
            {{#selectSkills a}}
            {{/selectSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>